<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>

</head>
<body>
    <main class="bg-neutral-950 flex flex-row">
        <%- include('../partials/sidebar') %>
        <section class="px-24 flex flex-col gap-6 h-screen w-[92vw] py-12">
            <div class="flex flex-row justify-between text-neutral-50">
                <h2 class="text-4xl font-bold">AGENDA</h2>
                <div class="border-2 rounded-lg py-2 px-4 inline-flex gap-2 items-center border-primary-600 bg-neutral-900 text-neutral-50">
                  <img src="/image/icones/calendar.svg" alt="Calendar Icon" class="w-6">
                  <p id="diasemana"></p>
                </div>

            </div>
            <div class="w-[100%] overflow-auto">
                <div class="w-[3%]"></div>
                <section class="flex-col w-[97%] gap-3">

                    <div class="flex-col bg-neutral-900 h-fit rounded-lg w-full mb-8">
                        <input type="checkbox" id="manha" class="hidden peer">
                        <label for="manha" class="group cursor-pointer w-full">
                          <div class="inline-flex justify-between items-center py-6 px-8 text-neutral-50 uppercase w-full">
                            <div class="inline-flex items-center gap-2">
                              <img src="/image/icones/sun.svg" alt="" class="w-12">
                              <h2 class="text-2xl">Manh√£</h2>
                            </div>
                            <h3 class="text-xl">08:00h - 12:00h</h3>
                          </div>
                        </label>
                        <div class="hidden peer-checked:block mt-2"> 
                          <div class="w-full flex items-center justify-center">
                            <hr class="w-[95%]">
                          </div>
                          <div class="flex">
                            <div id="tdia" class="flex-col text-gray-50 p-5"> 

                              <span class="px-5 flex"><h3 id="scriphorario" class="text-primary-600 italic text-2x1 font-mono"><!--scriphorario--></h3><p id="scripconteudo" class="font-sans"><!--scripconteudo--></p></span>  
                            
                            </div>
                          </div>
                        </div>
                      </div>
          
                      <div class="flex-col bg-neutral-900 h-fit rounded-lg w-full mb-8">
                        <input type="checkbox" id="tarde" class="hidden peer">
                        <label for="tarde" class="group cursor-pointer w-full">
                          <div class="inline-flex justify-between items-center py-6 px-8 text-neutral-50 uppercase w-full">
                            <div class="inline-flex items-center gap-2">
                              <img src="/image/icones/cup.svg" alt="" class="w-12">
                              <h2 class="text-2xl">Tarde</h2>
                            </div>
                            <h3 class="text-xl">14:00h - 18:00h</h3>
                          </div>
                        </label>
                        <div class="hidden peer-checked:block mt-2"> 
                          <div class="w-full flex items-center justify-center">
                            <hr class="w-[95%]">
                          </div>
                          <div class="flex">
                            <div id="tarde" class="flex-col text-gray-50 p-5">
                              
                              <span class="px-5 flex"><h3 id="scriphorario" class="text-primary-600 italic text-2x1 font-mono"><!--scriphorario--></h3><p id="scripconteudo" class="font-sans"><!--scripconteudo--></p></span>
                            
                            </div>
                          </div>
                        </div>
                      </div>
              
    
                      <div class="flex-col bg-neutral-900 h-fit rounded-lg w-full mb-8">
                        <input type="checkbox" id="noite" class="hidden peer">
                        <label for="noite" class="group cursor-pointer w-full">
                          <div class="inline-flex justify-between items-center py-6 px-8 text-neutral-50 uppercase w-full">
                            <div class="inline-flex items-center gap-2">
                              <img src="/image/icones/moon.svg" alt="" class="w-12">
                              <h2 class="text-2xl">Noite</h2>
                            </div>
                            <h3 class="text-xl">18:00h - 22:00h</h3>
                          </div>
                        </label>
                        <div class="hidden peer-checked:block mt-2"> 
                          <div class="w-full flex items-center justify-center">
                            <hr class="w-[95%]">
                          </div>
                          <div class="flex">
                            <div id="noite" class="flex-col text-gray-50 p-5 overflow-auto">

                              <span class="px-5 flex"><h3 id="scriphorario" class="text-primary-600 italic text-2x1 font-mono"><!--scriphorario--></h3><p id="scripconteudo" class="font-sans"><!--scripconteudo--></p></span>
                            
                            </div>
                          </div>
                        </div>
                      </div> 
                </section>
            </div>
        </section>
    </main>
    <script src="/js/agenda.js"></script>
